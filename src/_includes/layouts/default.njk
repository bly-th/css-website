{% set css %}
  {% include "css/utility/breakout-button.css" %}
  {% include "css/utility/faux-background.css" %}
  {% include "css/utility/reset.css" %}
  {% include "css/utility/visibility.css" %}
  {% include "css/utility/wrapper.css" %}

  {% include "css/composition/grid.css" %}
  {% include "css/composition/flow.css" %}

  {% include "css/components/breadcrumbs.css" %}
  {% include "css/components/button.css" %}
  {% include "css/components/content-wrapper.css" %}
  {% include "css/components/hero.css" %}
  {% include "css/components/horizontal-list.css" %}
  {% include "css/components/os-window.css" %}
  {% include "css/components/vertical-list.css" %}
  {% include "css/components/window-stack.css" %}

  {% include "css/global/code.css" %}
  {% include "css/global/global.css" %}
  {% include "css/global/site-footer.css" %}
  {% include "css/global/site-header.css" %}
  {% include "css/global/type.css" %}

  {% include "css/global/tokens.css" %}
{% endset %}
<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% include 'partials/meta.njk' %}
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;700&family=Work+Sans:ital,wght@0,900;1,900&display=swap" rel="stylesheet">

    <style>
      {{ css | cssmin | safe }}
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="wrapper">
        <div class="site-header__inner">
          <a href="/" class="site-header__logo">
            {% include '../../img/logo.svg' %}
          </a>

          <ul class="site-header__summary horizontal-list">
            <li><a href="https://github.com/ryangittings/blyth-css" target="_blank" rel="noopener noreferrer">{{ github.tag }}</a></li>
            <li><a href="https://github.com/bly-th/css" target="_blank" rel="noopener noreferrer">{% include '../../img/icons/github.svg' %}</a></li>
          </ul>
          
          <nav class="site-header__navigation" aria-label="Primary navigation">
            <ul class="horizontal-list">
              <li><a href="/why/">Why Blyth?</a></li>
              <li><a href="/docs/">Documentation</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    
    <main>
      {{ content | safe }}
    </main>

    <footer class="[ site-footer ] [ text-center ]">
      <div class="wrapper">
        <div class="gap-bottom-200">
          <p>Made with ❤️ for HTML & CSS programmers</p>
        </div>
        
        <ul class="[ horizontal-list ] [ text-200 ]">
          <li><a href="https://github.com/bly-th/css-website/blob/master/{{ page.inputPath }}" target="_blank" rel="noopener noreferrer">Edit this page on GitHub</a></li>
          <li><a href="https://ryangittings.co.uk" target="_blank" rel="noopener noreferrer">Created by Ryan Gittings</a></li>
        </ul>
      </div>
    </footer>
  </body>
</html>